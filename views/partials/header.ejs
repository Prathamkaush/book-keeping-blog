<script>
  function adminLogin() {
    const password = prompt("Enter Admin Password:");  // âœ… capture password
    if (!password) return;  // if user cancelled

    fetch("/admin-login", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ password })   // âœ… now password is defined
    })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        alert("Admin logged in!");
        location.reload(); // reload so admin buttons show up
      } else {
        alert("Wrong password!");
      }
    });
  }
</script>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const logoutBtn = document.getElementById("logoutBtn");
    if (logoutBtn) {
      logoutBtn.addEventListener("click", () => {
        fetch("/admin-logout", { method: "POST" })
          .then(res => res.json())
          .then(data => {
            if (data.success) {
              alert("Logged out successfully!");
              window.location.reload(); // refresh page â†’ buttons hidden
            }
          });
      });
    }
  });
</script>

